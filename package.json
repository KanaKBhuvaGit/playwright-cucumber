{
  "name": "play-ts-cucumber",
  "version": "1.0.0",
  "description": "Playwright Cucumber TS framework - The easiest way to learn",
  "main": "index.js",
  "scripts": {
    "allure:generate": "npx allure generate ./allure-results --clean",
    "allure:open": "npx allure open ./allure-report",
    "allure:serve": "npx allure serve",
    "pretest": "npx ts-node src/helper/init.ts && rm -rf ./allure-report",
    "test": "cross-env ENV=prod cucumber-js test || true",
    "posttest": "npx ts-node src/helper/report.ts && npm run allure:generate",
    "test:failed": "cucumber-js -p rerun @rerun.txt",
    "test-api": "npx playwright test src/api-test"
  },
  "keywords": [
    "cucumber",
    "cucumber - TS",
    "playwright-cucumber"
  ],
  "author": "Koushik @LetCode with Koushik",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^9.0.1",
    "@playwright/test": "^1.32.3",
    "allure-commandline": "^2.21.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "experimental-allure-playwright": "^0.0.3",
    "fs-extra": "^11.1.1",
    "multiple-cucumber-html-reporter": "^3.3.0",
    "playwright": "^1.32.3",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2"
  }
}
